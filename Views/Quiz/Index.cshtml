@{
    ViewBag.Title = "Spirit Animal";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Spirit Animal Quiz</title>
    <link rel="stylesheet" href="style.css">
</head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<!-- Bootstrap CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<body>

    <div class=" intro">
        <div class="container vh-100 d-flex justify-content-center align-items-center ">
            <div class="intro-box text-center w-100 w-md-75 w-lg-50">
                <h2 id="h1" class="fw-bold mb-3">Find Your Spirit Animal</h2>
                <h2 id="h2" class="mb-3">Discover which animal best matches your personality!</h2>
                <h2 id="h3" class="mb-3">Just answer a few fun and simple questions, and we'll reveal your spirit animal based on your choices.</h2>
                <input type="text" id="userName" placeholder="Type your name here" class="form-control-sm"/>
                <button id="Start_btn">Start</button>
                <h2 id="h4" class="pulse-text mt-4">Press Start Button to start the adventure!</h2>
            </div>
        </div>
    </div>

        <div class="quiz-container" hidden >
            <h2 id="questionText">You find a lost puppy on the road. What do you do?</h2>
            <img src="" hidden id="Animal_image" class="img-fluid"/>
            <div id="optionsContainer">
                <div><input type="radio" name="option" id="opt1" value="Caring,Loyal"><label for="opt1">Take it home and care for it</label></div>
                <div><input type="radio" name="option" id="opt2" value="Leader,Fearless"><label for="opt2">Lead it to a shelter</label></div>
                <div><input type="radio" name="option" id="opt3" value="Innocent,Joyful"><label for="opt3">Play with it happily</label></div>
                <div><input type="radio" name="option" id="opt4" value="Clever,Sharp"><label for="opt4">Observe it from afar</label></div>
                <div><input type="radio" name="option" id="opt5" value="Wise,Loyal"><label for="opt5">Wait for its owner</label></div>
            </div>
            <button id="Submit_Btn" onclick="submitAnswer()">Next</button>
        </div>


</body>
</html>
<link href="~/Content/Style.css" rel="stylesheet" />
<script src="~/Scripts/Script.js"></script>
